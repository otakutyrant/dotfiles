[alias]
  c = !gitc # A personal command, see the document in its source code.
  co = checkout
  d = diff
  s = status
  # Use local date and concise format for log.
  # https://stackoverflow.com/q/7853332/12080580
  g = log --graph --all --date=format-local:'%Y-%m-%d %H:%M:%S' --format='%C(auto)%h%d %cd %s'
[color]
  ui = on
[credential]
  # Store your credentials permanently.
  # https://stackoverflow.com/a/12240995/1546088
  helper = store
[merge]
  tool = meld
[push]
  # Ignore a boring warning.
  # http://stackoverflow.com/questions/13148066/warning-push-default-is-unset-its-implicit-value-is-changing-in-git-2-0
  default = simple
[user]
  name = otakutyrant
  email = otakutyrant@gmail.com
[log]
  decorate = auto
[status]
  # ShowStash only work for 2.14.0 and later.
  showStash = true
